# Polymarket Paper Trader Configuration

# Trading Mode
PAPER_MODE=true                    # Always true for paper trading
STARTING_BALANCE=1000              # Virtual starting balance in USD

# API Endpoints (no auth needed for read-only)
POLYMARKET_GAMMA_HOST=https://gamma-api.polymarket.com
POLYMARKET_CLOB_HOST=https://clob.polymarket.com

# Strategy Allocations (percentages, must sum to 100)
ALLOCATION_ARBITRAGE=30
ALLOCATION_VALUE=30
ALLOCATION_WHALE=20
ALLOCATION_MOMENTUM=15
ALLOCATION_MEAN_REVERSION=5

# Risk Limits
MAX_POSITION_PCT=10                # Max 10% per position
MAX_CATEGORY_PCT=30                # Max 30% per category
MIN_BUFFER_PCT=20                  # Keep 20% as cash buffer
DRAWDOWN_WARNING_PCT=15            # Reduce size at 15% drawdown
DRAWDOWN_HALT_PCT=25               # Stop trading at 25% drawdown

# Position Sizing
KELLY_FRACTION=0.25                # Use 25% of Kelly suggestion
MIN_POSITION_USD=10                # Minimum position size
MAX_POSITION_USD=5000              # Maximum position size

# Trading Parameters
SCAN_INTERVAL_MS=300000            # Scan every 5 minutes
MIN_MARKET_LIQUIDITY=10000         # Min $10k liquidity
MIN_EDGE_PCT=2                     # Min 2% edge to trade

# Logging
LOG_LEVEL=info                     # debug, info, warn, error
